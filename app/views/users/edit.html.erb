<h1>User info</h1>
<% if @user.errors.any? %>
 <h2>1error prohibited this obj from being saved:</h2>
 <p>Name is too short (minimum is 2 characters)</p>
<%end%>

<%= form_with model: @user do |f| %>
 <label for= "inputName">Name</label><br>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前" %><br>
 <label for= "inoutImage">ProfileImage</label>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %><br>
 <label for= "inoutIntroduction">Introduction</label>
  <%= f.text_field :introduction, placeholder: "自己紹介文" %><br>
 <%= f.submit "変更を保存" %>
<% end %>
