
<div class="container">
  <div class = "row">
    <div class = "col-md-3">
      <%= render "layouts/user_info",user: @user, book_new: @book_new %>
    </div>

    <div class = "col-md-9">
      <h1>Books</h1>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <% @user.books.each do |book| %>
        <tbody>
          <td><%= image_tag @user.get_profile_image(100, 100) %></td>
          <td><%= link_to book.title, book_path(book.id) %></td>
          <td><%= book.body %></td>
        </tbody>
        <%end%>
      </table>
    </div>
  </div>
</div>
