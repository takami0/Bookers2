<div class = "row">
  <div class = "col-lg-3">
    <%= render "layouts/user_info", user: @user, book_new: @book_new %>
  </div>
  <div class = "col-lg-9">
    <h1>Users</h1>
    <table class="table">
      <thed>
        <tr>
          <th>image</th>
          <th>name</th>
          <th></th>
        </tr>
      </thed>
      <% @users.each do |user| %>
      <tbody>
        <td><%= image_tag user.get_profile_image(100, 100) %></td>
        <td><%= user.name %></td>
        <td><%= link_to "show", url:user_path(@user.id), method: :get %></td>
      </tbody>
      <%end%>
    </table>
  </div>
</div>

