<div class="container">
  <div class="row">
    <div class="col-lg-6">
      <h1>User info</h1>
    </div>
    <table class="table table-striped">
      <%= image_tag @user.get_profile_image %>
      <p>name</p>
      <%= @user.name %>
      <p>introduction</p>
      <%= @user.introduction %>
      <p><%= link_to "user編集", edit_user_path(@user.id) %></p>

      <h1>New book</h1>
      <%= form_with model: @book do |f| %>
        <label for= "inputTitle">Title</label>
          <%= f.text_field :title %>
        <label for= "inputOpinion">Opinion</label>
          <%= f.text_field :opinion %>
        <%= f.submit "create book" %>
      <% end %>
    </table>
  </div>
</div>


<div class="container">
  <div class="row">
    <div class="col-lg-6">
      <h1>Book detail</h1>
    </div>
    <table class="table table-striped">
     <%= image_tag @book.get_image(100, 100) %>
     <%= link_to current_user.name, users_path %>
     <%= link_to "#{@book.title}", book_path(@book.id) %>
     <%= @book.opinion %>
     <%= link_to "Edit", edit_book_path(@book.id) %>
     <%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "are you sure?" %>
    </table>
  </div>
</div>
