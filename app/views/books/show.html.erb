<h1>Book detail</h1>

 <div>
  <%= link_to book_path(@book.id) do  %>
    <%= image_tag @book.get_image %>
  <% end %>

  <p><%= @book.user.name %></p>
  <p><%= @book.title %></p>
  <p><%= @book.opinion %>></p>

  <%= link_to "Edit", edit_book_path(@book) %>
  <%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "are you sure?" %>
 </div>
