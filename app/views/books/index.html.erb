
<div class="container">
  <%= render "layouts/errors",  book_new: @book_new %>
  <div class="row">
    <div class= "col-lg-6">
      <%= render "user_info", user_self: @user_self, book_new: @book_new %>
    </div>

    <div class="col-lg-6">
      <h1>Books</h1>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
      <% @books.each do |book| %>
        <tbody>
          <td><%= image_tag book.get_profile_image(100, 100) %></td>
          <td><%= link_to book.title, book_path(book.id) %></td>
          <td><%= book.opinion %></td>
        </tbody>
      <% end %>
      </table>
    </div>
  </div>
</div>