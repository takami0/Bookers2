<div class="container">
  <div class="row">
  <%= render "user_info",user: @user, book_new: @book_new %>


    <div class="col-lg-6">
      <h1>Books</h1>
    </div>
    <table class="table table-striped">
      <% @books.each do |book| %>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
      <tr>
        <td><%= link_to book.title, book_path(book.id) %></td>
        <td><%= book.opinion %></td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
