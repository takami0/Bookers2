
<h1>User info</h1>
<%= image_tag @user.get_profile_image %>
<table class="table table-striped">
  <tr>
    <td>name</td>
    <td><%= @user.name %></td>
  </tr>
  <tr>
    <td>introduction</td>
    <td><%= @user.introduction %></td>
  </tr>
</table>

<p><%= link_to "user編集", edit_user_path(@user.id) %></p>

<h1>New book</h1>
<%= form_with model: @book do |f| %>
  <label for= "inputTitle">Title</label>
    <%= f.text_field :title %>
  <label for= "inputOpinion">Opinion</label>
    <%= f.text_field :opinion %>
  <%= f.submit "create book" %>
<% end %>

