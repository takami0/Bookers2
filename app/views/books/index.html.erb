
<div class= "container px-5 px-sm-o">
  <%= render "layouts/errors",  book_new: @book_new %>
  <div class="row">
    <div class= "col-md-3">
      <%= render "layouts/user_info", user: @user, book_new: @book_new %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h1>Books</h1>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
      <% @books.each do |book| %>
        <tbody>
          <td><%= link_to image_tag(book.user.get_profile_image(100, 100)),  user_path(book.user.id) %></td>
          <td><%= link_to book.title, book_path(book.id) %></td>
          <td><%= book.body %></td>
        </tbody>
      <% end %>
      </table>
    </div>
  </div>
</div>