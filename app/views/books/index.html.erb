<div class="container">
  <div class="row">
    <div class="col-lg-6">
      <h1>User info</h1>
    </div>
      <%= image_tag @user.get_profile_image(100, 100) %>
      <table class="table table-striped">
        <p>name</p>
        <%= @user.name %>
        <p>introduction</p>
        <%= @user.introduction %>
      </table>
      <p><%= link_to "user編集", edit_user_path(@user.id) %></p>

      <h1>New book</h1>
        <%= form_with model: @book_new do |book_new| %>
          <label for= "inputTitle">Title</label>
            <%= book_new.text_field :title %>
          <label for= "inputOpinion">Opinion</label>
            <%= book_new.text_field :opinion %>
          <%= book_new.submit "create book" %>
        <% end %>

    <div class="col-lg-6">
      <h1>Books</h1>
    </div>
    <table class="table table-striped">
      <% @books.each do |book| %>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
      <tr>
        <td><%= image_tag book.get_image(100, 100) %></td>
        <td><%= link_to book.title, book_path(book.id) %></td>
        <td><%= book.opinion %></td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
