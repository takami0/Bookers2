<div class="container">
  <div class="row">
    <div class="col-lg-6">
      <h1>User info</h1>
    </div>
    <table class="table table-striped">
      <%= image_tag @user.get_profile_image(50, 50) %>
      <p>name</p>
      <%= @user.name %>
      <p>introduction</p>
      <%= @user.introduction %>
      <p><%= link_to "user編集", edit_user_path(@user.id) %></p>

      <h1>New book</h1>
        <%= form_with model: @book do |f| %>
          <label for= "inputTitle">Title</label>
            <%= f.text_field :title %>
          <label for= "inputOpinion">Opinion</label>
            <%= f.text_field :opinion %>
          <%= f.submit "create book" %>
        <% end %>
    </table>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-lg-6">
      <h1>Books</h1>
    </div>
    <table class="table table-striped">
      <% @books.each do |book| %>
      <tr>
        <th colspan="2">Title</th>
        <th>Opinion</th>
      </tr>
      <tr>
        <td><%= image_tag book.get_image(100, 100) %></td>
        <td><%= link_to book.title, book_path(current_user.id) %></td>
        <td><%= book.opinion %></td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
